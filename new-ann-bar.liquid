{%- if  section.blocks.size > 0 and section.settings.show_announcement_bar -%}
<div class="new-announcement-bar swiper-container">
  <div class="new-messages swiper-wrapper">
    {%- for block in section.blocks -%}
    <div class="new-message swiper-slide">{{block.settings.message}}</div>
    {%- endfor -%}
  </div>
  <div class="new-swiper-button swiper-button-prev"></div>
  <div class="new-swiper-button swiper-button-next"></div>
</div>
<!-- code by new.com -->
<script src="//cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
<script>
  const swiper = new Swiper('.swiper-container', {
    {%- if section.settings.autoplay %}
    autoplay: {delay: {{section.settings.delay}} },
    {%- endif -%}
    loop: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>
<style>
  .new-announcement-bar{
    background:{{section.settings.colorBackground}};
    position: relative;
    overflow: hidden;
  }

  .new-message{
    color:{{section.settings.colorText}};
    padding:5;
    display: flex;  /* Add this property to center the text */
    justify-content: center; /* Add this property to center the text horizontally */
    align-items: center;  /* Add this property to center the text vertically */
    text-align: center;
    font-size: {{ section.settings.fontsize }}px;
    
  }
  .new-announcement-bar .swiper-button-next:after,
  .new-announcement-bar .swiper-container-rtl .swiper-button-prev:after,
  .new-announcement-bar .swiper-button-prev:after,
  .new-announcement-bar .swiper-container-rtl .swiper-button-next:after {
    font-size: 14px;
    color: {{section.settings.colorText}};
    font-size: {{section.settings.iconSize}}px; /* add this line to adjust the size */
}
  {%- if  section.blocks.size < 2 %}
  .new-announcement-bar .new-swiper-button{display:none!important;}
  {%- endif -%}
  .new-swiper-button {
    display: block !important;
    top: 75% !important;
  }
  
  .new-announcement-bar{
  background:{{section.settings.colorBackground}};
  position: relative;
  overflow: hidden;
  height: {{ section.settings.heightbar }}px; /* adjust the height value as needed */
}

</style>
{%- endif -%}

{% schema %}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcement_bar",
        "label": "Show"
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Autoplay"
      },
      {
        "type": "text",
        "id": "delay",
        "label": "Delay between transitions (in ms)",
        "default": "5000"
      },
      {
        "type": "text",
        "id": "heightbar",
        "label": "Announcement Bar Height",
        "default": "40"
      },
      {
  "type": "text",
  "id": "iconSize",
  "label": "Navigation Icon Size",
  "default": "14"
},
      {
        "type": "text",
        "id": "fontsize",
        "label": "Font Size",
        "default": "12"
      },
      {
        "type": "color",
        "id": "colorBackground",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "colorText",
        "label": "Text color",
        "default": "#000"
      }
],
"blocks": [
      {
        "type": "header",
        "name": "Your Custom Message",
        "settings": [
{
              "id": "message",
              "type": "textarea",
             "label": "What would you want to write there?"
            }
        ]
      }
]
  }
{% endschema %}
